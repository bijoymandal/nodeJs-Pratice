{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "E-commerce API",
        "description": "API for E-commerce Application"
    },
    "servers": [
        {
            "url": "http://localhost:3200",
            "description": "Local server"
        }
    ],
    "components": {
        "securitySchemes": {
            "JWT": {
                "in": "header",
                "type": "apiKey",
                "name": "Authorization"
            }
        }
    },
    "paths": {
        "/api/users/signup": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "User Signup",
                "description": "Endpoint for user registration",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "customer",
                                            "seller"
                                        ],
                                        "default": "customer"
                                    }
                                },
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "required": true,
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "User registration failed"
                    }
                }
            }
        },
        "/api/users/signIn": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "User SignIn",
                "description": "Endpoint for user login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "User logged in successfully"
                    },
                    "401": {
                        "description": "Invalid email or password"
                    }
                }
            }
        },
        "/api/product/add": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Add Product",
                "description": "Endpoint to add a new product",
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "image": {
                                        "type": "string"
                                    },
                                    "category": {
                                        "type": "string"
                                    },
                                    "size": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "title",
                                    "description",
                                    "price",
                                    "image",
                                    "category",
                                    "size"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Product added successfully"
                    },
                    "400": {
                        "description": "Failed to add product"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/product": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get Products",
                "description": "Endpoint to retrieve all products",
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/product/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get Products",
                "description": "Endpoint to retrieve all products",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "product is required"
                    }
                ],
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "product Not found"
                    }
                }
            }
        },
        "/api/product/filter": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Filter products",
                "description": "Filter products based on query parameters like maxPrice, category, etc.",
                "parameters": [
                    {
                        "name": "maxPrice",
                        "in": "query",
                        "required": false,
                        "type": "number",
                        "description": "Maximum price of products"
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "description": "Category of products"
                    },
                    {
                        "name": "minPrice",
                        "in": "query",
                        "required": false,
                        "type": "number",
                        "description": "Minimum price of products"
                    }
                ],
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Filtered list of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "category": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "product Not found"
                    }
                }
            }
        },
        "/api/product/rate": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Rate a product",
                "description": "Rate a product by providing userID, productID, and rating in query parameters",
                "parameters": [
                    {
                        "name": "productID",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "ID of the product"
                    },
                    {
                        "name": "rating",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "description": "Rating value (e.g., 1-5)"
                    }
                ],
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product rated successfully"
                    },
                    "400": {
                        "description": "Failed to rate product"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/cartItems": {
            "get": {
                "tags": [
                    "CartItems"
                ],
                "summary": "Get Cart Items",
                "description": "Endpoint to retrieve all cart items for the authenticated user",
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of cart items",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "productId": {
                                        "type": "string"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    }
}