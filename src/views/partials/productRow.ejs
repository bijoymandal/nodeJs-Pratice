<tr>
  <td class="px-4 py-2"><%= product._id %></td>
  <td class="px-4 py-2">
    <img
      src="<%= product._imageUrl %>"
      alt="<%= product._name %>"
      class="w-10 h-10 rounded-full object-cover"
    />
  </td>
  <td class="px-4 py-2"><%= product._name %></td>
  <td class="px-4 py-2"><%= product._desc %></td>
  <td class="px-4 py-2"><%= product._price %></td>
  <td class="px-4 py-2">
    <% if (product.status === 'active') { %>
    <span
      class="inline-block px-2 py-1 text-xs text-green-800 bg-green-100 rounded"
      >Active</span
    >
    <% } else { %>
    <span class="inline-block px-2 py-1 text-xs text-red-800 bg-red-100 rounded"
      >InActive</span
    >
    <% } %>
  </td>
  <td class="px-4 py-2">
    <a
      href="/product/update-product/<%=product._id %>"
      class="text-blue-600 hover:underline mr-2"
      >Edit</a
    >
    <a
      href="/product/delete-product/<%=product._id%>"
      class="text-red-600 hover:underline"
      >Delete</a
    >
  </td>
</tr>
