<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tailwind CSS Table</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <div class="max-w-6xl mx-auto bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Product List</h1>
    
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-300 divide-y divide-gray-200 text-sm text-left">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="px-4 py-2 font-medium">#</th>
            <th class="px-4 py-2 font-medium">Image</th>
            <th class="px-4 py-2 font-medium">Name</th>
            <th class="px-4 py-2 font-medium">Email</th>
            <th class="px-4 py-2 font-medium">Price</th>
            <th class="px-4 py-2 font-medium">Status</th>
            <th class="px-4 py-2 font-medium">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">
            <% products.forEach(product=>{ %>
          <tr>
            <td class="px-4 py-2"><%= product._id %></td>
            <td class="px-4 py-2">
                <img src="<%= product._imageUrl %>" alt="<%= product._name%>" class="w-10 h-10 rounded-full object-cover"/>
            </td>
            <td class="px-4 py-2"><%= product._name%></td>
            <td class="px-4 py-2"><%= product._desc %></td>
            <td class="px-4 py-2"><%= product._price %></td>
            
            <td class="px-4 py-2">
                <%if(product.status=='active'){%>
                <span class="inline-block px-2 py-1 text-xs text-green-800 bg-green-100 rounded">Active</span>
                <%} else {%>
                <span class="inline-block px-2 py-1 text-xs text-red-800 bg-red-100 rounded">InActive</span>
                <% } %>
            </td>
            <td class="px-4 py-2">
              <button class="text-blue-600 hover:underline mr-2">Edit</button>
              <button class="text-red-600 hover:underline">Delete</button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
